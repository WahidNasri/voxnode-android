<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="org.linphone.R" />
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="org.linphone.ui.main.voxdialer.viewmodel.VoxDialerViewModel" />
    </data>

    <androidx.slidingpanelayout.widget.SlidingPaneLayout
        android:id="@+id/sliding_pane_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="@dimen/sliding_pane_left_fragment_width"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@{R.attr.color_main1_500}">

                <include
                    android:id="@+id/top_bar"
                    layout="@layout/main_activity_top_bar"
                    bind:viewModel="@{viewModel}"
                    bind:enableExtraAction="@{viewModel.deleteButtonEnabled}"
                    bind:extraActionIcon="@{@drawable/ic_add_icon}"
                    bind:extraActionContentDescription="@{@string/add_contact}"
                    bind:extraActionClickListener="@{() -> viewModel.onExtraActionClicked()}"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/top_bar_height"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <View
                    android:id="@+id/shadow_effect"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/top_bar_shadow_height"
                    android:background="@drawable/shape_squircle_white_r20_top_shadow"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/top_bar_height"
                    android:background="@drawable/shape_squircle_white_r20_top_background"
                    app:layout_constraintBottom_toTopOf="@id/bottom_nav_bar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- Phone number display area -->
                    <LinearLayout
                        android:id="@+id/number_display_container"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="24dp"
                        android:padding="16dp"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/country_flag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.countryFlagEmoji}"
                            tools:text="ðŸ‡«ðŸ‡·"
                            android:textSize="24sp"
                            tools:visibility="visible"
                            android:visibility="@{viewModel.isFlagVisible ? View.VISIBLE : View.GONE}" />
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_gravity="center">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/phone_number_display"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@{viewModel.formattedNumber}"
                                tools:text="+33 12314444466666666663"
                                android:textSize="24sp"
                                android:maxLines="1"
                                android:hint="@string/enter_phone_number_hint"
                                android:inputType="none"
                                android:focusable="false"
                                android:clickable="true"
                                android:longClickable="true"
                                android:textColor="?attr/color_main2_900"
                                android:textColorHint="?attr/color_main2_400"
                                android:minHeight="48dp"
                                android:gravity="center"
                                android:background="@null"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:textAlignment="center"
                                android:fontFamily="@font/noto_sans_600"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="24sp"
                                app:autoSizeStepGranularity="1sp" />

                        </FrameLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/delete_button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/backspace_fill"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="12dp"
                            android:visibility="@{viewModel.deleteButtonEnabled ? View.VISIBLE : View.GONE}"
                            app:tint="?attr/color_main2_600" />

                    </LinearLayout>

                    <!-- Dialer keypad -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/dialer_keypad"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="32dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/number_display_container">

                        <!-- Row 1: 1, 2, 3 -->
                        <FrameLayout
                            android:id="@+id/digit_1_container"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:background="@drawable/vox_dialer_button_background"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintEnd_toStartOf="@+id/digit_2_container"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintHorizontal_chainStyle="spread">
                            
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="-8dp"
                                android:text="1"
                                android:textSize="32sp"
                                android:fontFamily="@font/noto_sans_600"
                                android:textColor="?attr/color_main2_900"
                                android:gravity="center"
                                android:background="@android:color/transparent"/>

                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/digit_2_container"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:background="@drawable/vox_dialer_button_background"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintEnd_toStartOf="@+id/digit_3_container"
                            app:layout_constraintStart_toEndOf="@+id/digit_1_container"
                            app:layout_constraintTop_toTopOf="parent">
                            
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_2_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="-8dp"
                                android:text="2"
                                android:textSize="32sp"
                                android:fontFamily="@font/noto_sans_600"
                                android:textColor="?attr/color_main2_900"
                                android:gravity="center"
                                android:background="@android:color/transparent" />
                                
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_2_letters"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:text="ABC"
                                android:textSize="12sp"
                                android:fontFamily="@font/noto_sans_500"
                                android:textColor="?attr/color_main2_600"
                                android:gravity="center"
                                android:letterSpacing="0.1"
                                android:background="@android:color/transparent" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/digit_3_container"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:background="@drawable/vox_dialer_button_background"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/digit_2_container"
                            app:layout_constraintTop_toTopOf="parent">
                            
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_3_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="-8dp"
                                android:text="3"
                                android:textSize="32sp"
                                android:fontFamily="@font/noto_sans_600"
                                android:textColor="?attr/color_main2_900"
                                android:gravity="center"
                                android:background="@android:color/transparent" />
                                
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_3_letters"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:text="DEF"
                                android:textSize="12sp"
                                android:fontFamily="@font/noto_sans_500"
                                android:textColor="?attr/color_main2_600"
                                android:gravity="center"
                                android:letterSpacing="0.1"
                                android:background="@android:color/transparent" />
                        </FrameLayout>

                        <!-- Row 2: 4, 5, 6 -->
                        <FrameLayout
                            android:id="@+id/digit_4_container"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/vox_dialer_button_background"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintEnd_toStartOf="@+id/digit_5_container"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/digit_1_container"
                            app:layout_constraintHorizontal_chainStyle="spread">
                            
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_4_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="-8dp"
                                android:text="4"
                                android:textSize="32sp"
                                android:fontFamily="@font/noto_sans_600"
                                android:textColor="?attr/color_main2_900"
                                android:gravity="center"
                                android:background="@android:color/transparent" />
                                
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_4_letters"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:text="GHI"
                                android:textSize="12sp"
                                android:fontFamily="@font/noto_sans_500"
                                android:textColor="?attr/color_main2_600"
                                android:gravity="center"
                                android:letterSpacing="0.1"
                                android:background="@android:color/transparent" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/digit_5_container"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/vox_dialer_button_background"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintEnd_toStartOf="@+id/digit_6_container"
                            app:layout_constraintStart_toEndOf="@+id/digit_4_container"
                            app:layout_constraintTop_toBottomOf="@+id/digit_2_container">
                            
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_5_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="-8dp"
                                android:text="5"
                                android:textSize="32sp"
                                android:fontFamily="@font/noto_sans_600"
                                android:textColor="?attr/color_main2_900"
                                android:gravity="center"
                                android:background="@android:color/transparent" />
                                
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_5_letters"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:text="JKL"
                                android:textSize="12sp"
                                android:fontFamily="@font/noto_sans_500"
                                android:textColor="?attr/color_main2_600"
                                android:gravity="center"
                                android:letterSpacing="0.1"
                                android:background="@android:color/transparent" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/digit_6_container"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/vox_dialer_button_background"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/digit_5_container"
                            app:layout_constraintTop_toBottomOf="@+id/digit_3_container">
                            
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_6_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="-8dp"
                                android:text="6"
                                android:textSize="32sp"
                                android:fontFamily="@font/noto_sans_600"
                                android:textColor="?attr/color_main2_900"
                                android:gravity="center"
                                android:background="@android:color/transparent" />
                                
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_6_letters"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:text="MNO"
                                android:textSize="12sp"
                                android:fontFamily="@font/noto_sans_500"
                                android:textColor="?attr/color_main2_600"
                                android:gravity="center"
                                android:letterSpacing="0.1"
                                android:background="@android:color/transparent" />
                        </FrameLayout>

                        <!-- Row 3: 7, 8, 9 -->
                        <FrameLayout
                            android:id="@+id/digit_7_container"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/vox_dialer_button_background"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintEnd_toStartOf="@+id/digit_8_container"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/digit_4_container"
                            app:layout_constraintHorizontal_chainStyle="spread">
                            
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_7_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="-8dp"
                                android:text="7"
                                android:textSize="32sp"
                                android:fontFamily="@font/noto_sans_600"
                                android:textColor="?attr/color_main2_900"
                                android:gravity="center"
                                android:background="@android:color/transparent" />
                                
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_7_letters"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:text="PQRS"
                                android:textSize="11sp"
                                android:fontFamily="@font/noto_sans_500"
                                android:textColor="?attr/color_main2_600"
                                android:gravity="center"
                                android:letterSpacing="0.05"
                                android:background="@android:color/transparent" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/digit_8_container"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/vox_dialer_button_background"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintEnd_toStartOf="@+id/digit_9_container"
                            app:layout_constraintStart_toEndOf="@+id/digit_7_container"
                            app:layout_constraintTop_toBottomOf="@+id/digit_5_container">
                            
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_8_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="-8dp"
                                android:text="8"
                                android:textSize="32sp"
                                android:fontFamily="@font/noto_sans_600"
                                android:textColor="?attr/color_main2_900"
                                android:gravity="center"
                                android:background="@android:color/transparent" />
                                
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_8_letters"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:text="TUV"
                                android:textSize="12sp"
                                android:fontFamily="@font/noto_sans_500"
                                android:textColor="?attr/color_main2_600"
                                android:gravity="center"
                                android:letterSpacing="0.1"
                                android:background="@android:color/transparent" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/digit_9_container"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/vox_dialer_button_background"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/digit_8_container"
                            app:layout_constraintTop_toBottomOf="@+id/digit_6_container">
                            
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_9_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="-8dp"
                                android:text="9"
                                android:textSize="32sp"
                                android:fontFamily="@font/noto_sans_600"
                                android:textColor="?attr/color_main2_900"
                                android:gravity="center"
                                android:background="@android:color/transparent" />
                                
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_9_letters"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:text="WXYZ"
                                android:textSize="10sp"
                                android:fontFamily="@font/noto_sans_500"
                                android:textColor="?attr/color_main2_600"
                                android:gravity="center"
                                android:letterSpacing="0.02"
                                android:background="@android:color/transparent" />
                        </FrameLayout>

                        <!-- Row 4: *, 0, # -->
                        <FrameLayout
                            android:id="@+id/digit_star_container"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/vox_dialer_button_background"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintEnd_toStartOf="@+id/digit_0_container"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/digit_7_container"
                            app:layout_constraintHorizontal_chainStyle="spread">
                            
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_star"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="*"
                                android:textSize="32sp"
                                android:fontFamily="@font/noto_sans_600"
                                android:textColor="?attr/color_main2_900"
                                android:gravity="center"
                                android:background="@android:color/transparent" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/digit_0_container"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/vox_dialer_button_background"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintEnd_toStartOf="@+id/digit_hash_container"
                            app:layout_constraintStart_toEndOf="@+id/digit_star_container"
                            app:layout_constraintTop_toBottomOf="@+id/digit_8_container">
                            
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_0_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="-8dp"
                                android:text="0"
                                android:textSize="32sp"
                                android:fontFamily="@font/noto_sans_600"
                                android:textColor="?attr/color_main2_900"
                                android:gravity="center"
                                android:background="@android:color/transparent" />
                                
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_0_plus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:text="+"
                                android:textSize="16sp"
                                android:fontFamily="@font/noto_sans_500"
                                android:textColor="?attr/color_main2_600"
                                android:gravity="center"
                                android:background="@android:color/transparent" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/digit_hash_container"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/vox_dialer_button_background"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/digit_0_container"
                            app:layout_constraintTop_toBottomOf="@+id/digit_9_container">
                            
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/digit_hash"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="#"
                                android:textSize="32sp"
                                android:fontFamily="@font/noto_sans_600"
                                android:textColor="?attr/color_main2_900"
                                android:gravity="center"
                                android:background="@android:color/transparent" />
                        </FrameLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Call button -->
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/call_button"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="32dp"
                        android:contentDescription="Call"
                        android:src="@drawable/phone"
                        android:tint="@color/bc_white"
                        android:background="@drawable/circular_fab_background"
                        android:backgroundTint="?attr/color_success_500"
                        android:padding="20dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/dialer_keypad" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <include
                    android:id="@+id/bottom_nav_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/bottom_nav_bar"
                    bind:viewModel="@{viewModel}"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/vox_dialer_nav_container"
